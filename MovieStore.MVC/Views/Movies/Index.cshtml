@model IEnumerable<MovieStore.Core.Entities.Review>

<div>
    <div class="container-fluid">
        <div class="row">

            @foreach (var review in Model)
            {
                <ul class="list-group">
                    <li class="list-group-item active">@review.MovieId</li>
                    <li class="list-group-item">@review.Rating</li>
                    <li class="list-group-item">@review.ReviewText</li>
                </ul>
            }
        </div>
    </div>
</div>